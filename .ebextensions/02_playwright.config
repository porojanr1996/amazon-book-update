packages:
  yum:
    - libnss3
    - libatk-bridge2.0-0
    - libdrm2
    - libxkbcommon0
    - libxcomposite1
    - libxdamage1
    - libxrandr2
    - libgbm1
    - libasound2
    - libatspi2.0-0
    - libcups2
    - libdbus-1-3

container_commands:
  01_install_playwright_browsers:
    command: |
      source /var/app/venv/*/bin/activate || true
      pip install playwright || true
      playwright install chromium || true
      playwright install-deps chromium || true
    ignoreErrors: true

